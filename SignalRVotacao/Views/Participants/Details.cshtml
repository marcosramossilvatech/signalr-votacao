@model SignalRVotacao.Models.Participants

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Participantes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParticName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParticName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalVoto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalVoto)
        </dd>
    </dl>
</div>
<div class="form-group">
    @if (@Model.Url != null ||  @Model.Url == "" )
    {
         <img src="~/Imagens/@Model.Url" height="200" width="200" asp-append-version="true" />
    }
    @*    <img src="~/Imagens/@Model.Foto" class="rounded-circle" height="40" width="40" asp-append-version="true" />
    <img id="imagem-selecionada" alt="Imagem selecionada">*@
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ParticId">Editar</a> |
    <a asp-action="Index">Voltar para listagem</a>
</div>
